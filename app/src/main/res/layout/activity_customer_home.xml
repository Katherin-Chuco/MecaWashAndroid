<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ServiceClientActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="327dp"
                android:layout_height="43dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/textBusqueda" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:gravity="center_horizontal"
                android:hint="¿Qué servicio estás buscando?"/>
        <Button
                android:text="Buscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBusqueda"
                app:layout_constraintTop_toBottomOf="@+id/textBusqueda" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="270dp"
                android:layout_height="58dp"
                android:id="@+id/imageService01"
                android:layout_marginTop="52dp"
                app:layout_constraintTop_toBottomOf="@+id/buttonBusqueda" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:srcCompat="@drawable/car"/>
        <ImageView
                android:layout_width="270dp"
                android:layout_height="58dp"
                android:id="@+id/imageService02"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageService01" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.496"
                app:srcCompat="@drawable/car"/>
        <ImageView
                android:layout_width="270dp"
                android:layout_height="58dp"
                android:id="@+id/imageService03"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageService02" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.504"
                app:srcCompat="@drawable/car"/>
        <ImageView
                android:layout_width="270dp"
                android:layout_height="58dp"
                android:id="@+id/imageService04"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageService03" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.496"
                app:srcCompat="@drawable/car"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>